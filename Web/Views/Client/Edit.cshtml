@model HubManPractices.Service.ViewModels.ClientViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (TempData["EditFail"] != null)
{
    <div class="alert alert-danger">@TempData["EditFail"]</div>
}
@if (TempData["EditError"] != null)
{
    <div class="alert alert-danger">@TempData["EditError"]</div>
}


<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ClientViewModel</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.Hidden("ClientID", Model.ClientID)
        </div>

        <div class="form-group">
            @Html.Hidden("ResellerID", Model.ResellerID)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClientName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ClientName)
                @Html.ValidationMessageFor(model => model.ClientName)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
