@using Microsoft.AspNet.Identity;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" />
</head>


<body>
    
    @{
        string image;
        if (User.Identity.IsAuthenticated)
        {
            image = Html.Action("GetImageUrl", "Reseller", new { UserID = User.Identity.GetUserId() }).ToString();
        }
        else
        {
            image = "";
        }
    }
   


    <div class="nav" id="nav" style="background-image:url(@image.Replace("~","").ToString()">
        <div class="nav-left">
            <ul>
                <li><a href="/Home/Index">Home</a></li>
                @if (Request.IsAuthenticated)
                {
                    <li><a href="/Reseller/Index">Resellers</a></li>
                }
            </ul>
        </div>
        @Html.Partial("_LoginPartial")
    </div>


    <div class="container body-content">
        @RenderBody()
    </div>
<!--
  <hr />
    <footer>
        <p><strong>&copy; </strong>@@DateTime.Now.Year - ITWorx Application</p>
    </footer>
-->

    



   
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
