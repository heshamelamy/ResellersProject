@model IEnumerable<HubManPractices.Service.ViewModels.ResellerViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


@if (Html.Action("HasPermission", "Reseller", new { pname = "Add Reseller" }).ToString() == "True")
{
    <p>
        @Html.ActionLink("Add Reseller", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientsQuota)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientsQuota)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.ResellerID  }) |
            @Html.ActionLink("Clients", "ShowClients", new {  id=item.ResellerID  }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>
